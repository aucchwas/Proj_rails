<h1>All Players</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Number</th>
      <th>Position</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.age %></td>
        <td><%= player.number %></td>
        <td><%= player.position %></td>
        <td><%= link_to "Show", player_path(player), class: "btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>