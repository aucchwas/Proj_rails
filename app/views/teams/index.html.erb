<h1>All Teams</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>points</th>
      <th>goal difference</th>
    </tr>
  </thead>
  <tbody>
    
    <% if !@team.present? %>
      <% @teams.each do |team| %>
        <tr>
          <td><%= team.team_name %></td>
          <td><%= team.points %></td>
          <td><%= team.goal_diff %></td>
          <td><%= link_to "Show", team_path(team), class: "btn btn-secondary"%></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td>No Teams found</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @teams%>