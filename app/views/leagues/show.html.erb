<div class="jumbotron">
  <h1 class="display-4"><%= @league.league_name %></h1>
  <p class="lead"><%= @league.country_name %></p>
  <hr class="my-4">
  <p>The type of this event is : <%= @league.league_type %></p>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Points</th>
      <th>Goal Difference</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.team_name %></td>
        <td><%= team.points %></td>
        <td><%= team.goal_diff %></td>
        <td><%= link_to "Show", team_path(team), class: "btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>