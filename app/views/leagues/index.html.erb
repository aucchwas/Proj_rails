<h1>All Leagues</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>Type</th>
    </tr>
  </thead>
  <tbody>
    <% if !@league.present? %>
      <% @leagues.each do |league| %>
      <tr>
        <td><%= league.custom_id%></td>
        <td><%= league.league_name %></td>
        <td><%= league.country_name %></td>
        <td><%= league.league_type %></td>
        <td><%= link_to "Show", league_path(league), class: "btn btn-secondary"%></td>
      </tr>
      <% end %>
    <% else %>
      <tr>
        <td>No Leagues found</td>
      </tr>
    <% end %>
  </tbody>
</table>